{{#if updateQuestionForm}}
<div class="update-question">
  <h4>Update {{model.content}}</h4>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=model.author}}
      </div>

      <div class="form-group">
        <label for="content">Content</label>
        {{input value=content id="content" placeholder=model.content}}
      </div>

      <div class="form-group">
        <label for="notes">Notes</label>
        {{input value=notes id="notes" placeholder=model.notes}}
      </div>

      <button class='btn' {{action 'update' model}}>Save</button>
    </form>
    <button class="btn" {{action 'delete' model}}>Delete Question</button>
</div>
{{else}}
<div class="update-question">
  <button class='btn' {{action 'updateQuestionForm'}}>Update</button>
</div>
{{/if}}
