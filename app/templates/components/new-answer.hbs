{{#if addNewAnswer}}
<div class="new-answer">
<h1>New Answer</h1>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="content">Content</label>
        {{input value=content id="content"}}
      </div>

      <button class='btn' {{action 'saveAnswer'}}>Save</button>
    </form>
  </div>
{{else}}
<div class="new-answer">
  <button class='btn' {{action 'answerFormShow'}}>New Answer</button>
</div>
{{/if}}
<br>
